<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <h3>Edit your Listing</h3>
    <form method="post" class="needs-validation" action="/listings/<%=listing._id%>?_method=PUT" novalidate>
        <div class="mb-3">
            <label for="title" class="form-lable">Title</label>
            <input name="listing[title]" value="<%=listing.title%>" class="form-control" type="text" required>
        </div>
       <div class="mb-3 ">
            <label for="description" class="form-lable">description</label>
            <textarea class="form-control" name="listing[description]" required><%=listing.description%></textarea>
       </div>
       <div class="mb-3">
            <label for="image" class="form-lable">image</label>
            <input class="form-control" name="listing[image]" value="<%=listing.image%>" type="text" required>
       </div>
       <div class="row">
       <div class="mb-3 col-md-4">
            <label for="price" class="form-lable">price</label>
            <input class="form-control" name="listing[price]" value="<%=listing.price%>" type="number" required>
       </div>
       <div class="mb-3 col-md-8">
            <label for="country" class="form-lable">country</label>
            <input class="form-control" name="listing[country]" value="<%=listing.country%>" type="text" required>
       </div> 
         </div>
       <div class="mb-3">
            <label for="location" class="form-lable">location</label>
            <input class="form-control" name="listing[location]" value="<%=listing.location%>" type="text" required>
       </div>      
            <button class="btn btn-dark edit-btn mb-2 mt-2">EDIT</button>
    </form>
        </div>
    </div>
</body>
